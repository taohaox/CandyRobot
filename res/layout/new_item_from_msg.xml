<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ly_from_msg_img"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_robotimg"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/from_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:lines="1"
            android:text="逗比到到" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/from_msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:background="#bcbcbc"
            android:text="2015-01-15 23:32:22"
            android:textColor="#f5f5f5"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/from_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/from_msg_bg"
            android:text="你好!你好!你好!你好!你好!你好!"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>